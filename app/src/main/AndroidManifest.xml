<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.tatans.coeus.alarm">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name="net.tatans.coeus.alarm.TestApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${app_label}"
        android:theme="@android:style/Theme.NoTitleBar"
        android:supportsRtl="true">
        <activity android:name="net.tatans.coeus.alarm.AlarmTestActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="net.tatans.coeus.alarm.OneShotAlarm"
            android:process=":remote" />
        <receiver
            android:name="net.tatans.coeus.alarm.RepeatingAlarm"
            android:process=":remote" />
    </application>

</manifest>
