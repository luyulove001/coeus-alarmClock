<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llt_null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_720x1280"
        android:focusable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_check_null"
            android:layout_width="@dimen/default_icon_width"
            android:layout_height="@dimen/default_icon_height"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:focusable="false"
            android:text="无"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="17dp"
        android:background="#fff" />

    <LinearLayout
        android:id="@+id/llt_wait"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_720x1280"
        android:focusable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_check_wait"
            android:layout_width="@dimen/default_icon_width"
            android:layout_height="@dimen/default_icon_height"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:focusable="false"
            android:text="稍后再响"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="17dp"
        android:background="#fff" />

    <LinearLayout
        android:id="@+id/llt_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_720x1280"
        android:focusable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_check_close"
            android:layout_width="@dimen/default_icon_width"
            android:layout_height="@dimen/default_icon_height"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:focusable="false"
            android:text="关闭"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="17dp"
        android:background="#fff" />

    <TextView
        android:id="@+id/empty_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
